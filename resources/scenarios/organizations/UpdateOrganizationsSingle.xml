<?xml version="1.0" encoding="utf-8"?>
<scenario xmlns="urn:perfcake:scenario:7.0">
    <run type="iteration" value="${iterations.count:5000}"/>
    <generator class="DefaultMessageGenerator"
                  threads="${thread.count:10}"/>
    <sequences>
        <sequence class="PrimitiveNumberSequence" id="num" />
    </sequences>

    <sender class="HttpSender">
        <target>http://${server.host}/rest/organizations/DefCode</target>
        <property name="method" value="PUT"/>
    </sender>

    <reporting>
        <reporter class="ResponseTimeStatsReporter">
            <property name="minimumEnabled" value="false"/>
            <property name="maximumEnabled" value="false"/>
            <destination class="ChartDestination">
                <period type="percentage" value="1"/>
                <property name="name" value="Single organization -
                                                Update -
                                                Response Time -
                                                Thread Count: ${thread.count:10} -
                                                Iterations: ${iterations.count:5000}"/>
                <property name="yAxis" value="Response Time [ms]"/>
                <property name="attributes" value="Result,Average"/>
                <property name="outputDir" value="charts/organizations/UpdateOrganizationsSingle/responseTime"/>
				<property name="autoCombine" value="true"/>
            </destination>
            <destination class="ConsoleDestination">
                <period type="time" value="1000"/>
            </destination>
        </reporter>
        <reporter class="ThroughputStatsReporter">
            <property name="minimumEnabled" value="false"/>
            <property name="maximumEnabled" value="false"/>
            <destination class="ChartDestination">
                <period type="percentage" value="1"/>
                <property name="name" value="Single organization -
                                                Update -
                                                Throughput Stats -
                                                Thread Count: ${thread.count:10} -
                                                Iterations: ${iterations.count:5000}"/>
                <property name="yAxis" value="Iteration/sec"/>
                <property name="attributes" value="Result,Average"/>
                <property name="outputDir" value="charts/organizations/UpdateOrganizationsSingle/throughputStats"/>
				<property name="autoCombine" value="true"/>
            </destination>
        </reporter>
    </reporting>

    <messages>
        <message content ='{"code":"DefCode","name":"DefNameAlter@{num}","icon":"DefUrlAlter@{num}","color":"DefColorAlter@{num}","permissions":null}'>
            <header name="Content-Type" value="application/json"/>
        </message>
    </messages>

</scenario>
