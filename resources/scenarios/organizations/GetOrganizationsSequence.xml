<?xml version="1.0" encoding="utf-8"?>
<scenario xmlns="urn:perfcake:scenario:7.0">
    <run type="iteration" value="${iterations.count:1000}"/>
    <generator class="DefaultMessageGenerator"
                  threads="${thread.count:10}">
        <!--<property name="senderTaskQueueSize" value="20"/>-->

    </generator>

    <sequences>
        <sequence class="PrimitiveNumberSequence" id="num" />
    </sequences>

    <sender class="HttpSender">
        <target>http://${server.host}/rest/organizations/DefCode@{num}</target>
        <property name="keepConnection"  value ="false"/>
        <property name="method" value="GET"/>
    </sender>

    <reporting>
        <reporter class="ResponseTimeStatsReporter">
            <property name="minimumEnabled" value="false"/>
            <property name="maximumEnabled" value="false"/>
            <destination class="ChartDestination">
                <period type="percentage" value="1"/>
                <property name="name" value="Sequence of organizations -
                                                Get -
                                                Response Time -
                                                Thread Count: ${thread.count:10} -
                                                Iterations: ${iterations.count:1000}"/>
                <property name="yAxis" value="Response Time [ms]"/>
                <property name="attributes" value="Result,Average"/>
                <property name="outputDir" value="charts/organizations/GetOrganizationsSequence/responseTime"/>
            </destination>
            <destination class="ConsoleDestination">
                <period type="time" value="1000"/>
            </destination>
        </reporter>
        <reporter class="ThroughputStatsReporter">
            <property name="minimumEnabled" value="false"/>
            <property name="maximumEnabled" value="false"/>
            <destination class="ChartDestination">
                <period type="percentage" value="1"/>
                <property name="name" value="Sequence of organizations -
                                                Get -
                                                Throughput stats -
                                                Thread Count: ${thread.count:10} -
                                                Iterations: ${iterations.count:1000}"/>
                <property name="yAxis" value="Iteration/sec"/>
                <property name="attributes" value="Result,Average"/>
                <property name="outputDir" value="charts/organizations/GetOrganizationsSequence/throughputStats"/>
            </destination>
        </reporter>
    </reporting>

    <messages>
        <message content="{}" >
            <header name="Content-Type" value="application/json"/>
        </message>
    </messages>
</scenario>
