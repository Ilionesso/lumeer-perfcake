<?xml version="1.0" encoding="utf-8"?>
<scenario xmlns="urn:perfcake:scenario:7.0">
    <run type="iteration" value="${iterations.count:1000}"/>
    <generator class="DefaultMessageGenerator"
                  threads="${thread.count:10}"/>
    <sequences>
        <sequence class="PrimitiveNumberSequence" id="num" />
        <sequence class="FileLinesSequence" id="methodId">
            <property name="fileUrl" value="resources/sequences/get-put_methods.txt" />
        </sequence>

    </sequences>

    <sender class="HttpSender">
        <target>http://${server.host}/rest/organizations/DefCode/projects/DefProjectCode@{num}</target>
        <property name="dynamicMethod" value="@{methodId}" />
        <property name="keepConnection" value ="false" />
    </sender>

    <reporting>
        <reporter class="ResponseTimeStatsReporter">
            <property name="minimumEnabled" value="false"/>
            <property name="maximumEnabled" value="false"/>
            <destination class="ChartDestination">
                <period type="percentage" value="1"/>
                <property name="name" value="Single project in a sequence of organizations -
                                                Get and Update -
                                                Response Time -
                                                Thread Count: ${thread.count:10} -
                                                Iterations: ${iterations.count:1000}"/>
                <property name="yAxis" value="Response Time [ms]"/>
                <property name="attributes" value="Result,Average"/>
                <property name="outputDir" value="charts/organizations/Multi_ReadUpdate_ProjectsSingle_OrganizationSequence/responseTime"/>
            </destination>
            <destination class="ConsoleDestination">
                <period type="time" value="1000"/>
            </destination>
        </reporter>
        <reporter class="ThroughputStatsReporter">
            <property name="minimumEnabled" value="false"/>
            <property name="maximumEnabled" value="false"/>
            <destination class="ChartDestination">
                <period type="percentage" value="1"/>
                <property name="name" value="Single project in a sequence of organizations -
                                                Get and Update -
                                                Throughput Stats -
                                                Thread Count: ${thread.count:10} -
                                                Iterations: ${iterations.count:1000}"/>
                <property name="yAxis" value="Iteration/sec"/>
                <property name="attributes" value="Result,Average"/>
                <property name="outputDir" value="charts/organizations/Multi_ReadUpdate_ProjectsSingle_OrganizationSequence/throughputStats"/>
            </destination>
        </reporter>
    </reporting>

    <messages>
        <message content ='{"code":"DefProjectCode@{num}","name":"DefProjectNameAlter","icon":"DefUrlAlter","color":"DefColorAlter","permissions":null}'>
            <header name="Content-Type" value="application/json"/>
        </message>
        <!--<message content =''>-->
            <!--<header name="Content-Type" value="application/json"/>-->
        <!--</message>-->

    </messages>

</scenario>
